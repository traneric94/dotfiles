rshift - n : if pgrep "Notion" > /dev/null; then osascript -e 'tell application "Notion" to activate'; else open -na "/Applications/Notion.app"; fi
rshift - z : if pgrep "zoom.us" > /dev/null; then osascript -e 'tell application "zoom.us" to activate'; else open -na "/Applications/zoom.us.app"; fi
rshift - m : if pgrep "SDM" > /dev/null; then osascript -e 'tell application "SDM" to activate'; else open -na "/Applications/SDM.app"; fi
rshift - d : if pgrep "Discord" > /dev/null; then osascript -e 'tell application "Discord" to activate'; else open -na "/Applications/Discord.app"; fi
rshift - p : if pgrep "1Password" > /dev/null; then osascript -e 'tell application "1Password" to activate'; else open -na "/Applications/1Password.app"; fi
rshift - g : if pgrep "Google Chrome" > /dev/null; then osascript -e 'tell application "Google Chrome" to activate'; else open -na "/Applications/Google Chrome.app"; fi
